<li class="prev<%= ' disabled' if current_page.first? %>">
    <% if !current_page.first? %>
        <%= link_to raw(t 'views.pagination.previous'), url, :rel => 'prev', :remote => remote %>
    <% else %>
        <%= link_to raw(t 'views.pagination.previous'), "#", :rel => 'prev', :remote => remote %>
    <% end %>
</li>
