        <div class="span9"><%="#{t('app.actions.updated_by')} : "%><%= @account_category.editor.full_name %><%=", #{t('app.at')} "%><%= @account_category.updated_at.strftime("%d/%m/%y à %H:%M") %>. </div>
        <br />
      <% end %>
    <% end %>
  </div>

  <hr />

  <div class="row">
