<%= form_for(@account_category, :html => { :class => "well "}) do |f| %>
  <% if @account_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account_category.errors.count, "error") %> prohibited this origin from being saved:</h2>

      <ul>
      <% @account_category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <div class="span2"><%= f.label :name %></div><%= f.text_field :name,{ :class => 'required'} %><span class="req" />
