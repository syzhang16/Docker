   <%= if !@account_category.id.nil? then link_to '<i class="fa fa-trash fa-lg"></i>'.html_safe, @account_category, :title => "#{t('app.actions.update_account_category')}", :confirm => "#{t('app.message.confirm.delete')}", :class=>"pull-right btn", :method => :delete end %>
  </div>

