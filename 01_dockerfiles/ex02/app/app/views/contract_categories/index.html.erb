<%= render 'title', :locals => { :title => @title }%>

<div class="container-fluid">

  <table class="table table-bordered table-striped">
   <thead>
    <tr>
      <th class="text-center">Nom</th>
      <th class="text-center">Description</th>
      <th class="text-center">Éditer</th>
    </tr>
   </thead>

  <tbody>
  <% @contract_categories.each do |contract_category| %>
    <tr>
      <td class="text-center"><%= contract_category.name %></td>
      <td class="text-center"><%= truncate(contract_category.description, :length => 300, :separator => ' ')%></td>
      <td class="text-center"><%= link_to '<i class="fa fa-edit fa-2x action-icon"></i>'.html_safe, edit_contract_category_path(contract_category),{:title => "Éditer la catégorie du contrat"} %></td>
    </tr>
  <% end %>
  </tbody>
  </table>

  <br />

  <%= paginate @contractcategories %>

</div>
