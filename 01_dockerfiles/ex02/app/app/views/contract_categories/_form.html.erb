<%= form_for(@contract_category, :html => { :class => "well "}) do |f| %>
  <% if @contract_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contract_category.errors.count, "error") %> prohibited this origin from being saved:</h2>

      <ul>
      <% @contract_category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <div class="span2">Nom :</div><%= f.text_field :name,{ :class => 'required'} %><span class="req" />
  </div>
  <div class="field">
    <div class="span2"><%= f.label :description %></div>
