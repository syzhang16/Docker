		<% if !@contract_category.updated_by.nil? %>
			<div class="span9"> Dernièrement modifié par : <%= @contract_category.editor.full_name %>, le <%= @contract_category.updated_at.strftime("%d/%m/%y à %H:%M") %>. </div> <br />

		<% else %>
		<% end %>

	<% end %>
	</div>

	<hr />

   <div class="row">
    <%= if !@contract_category.id.nil? then f.button "Modifier la catégorie de contrat", :type => :submit, :class =>"btn btn-primary",:id =>"contract_category_validate_form" else f.button 'Créer une catégorie de contrat', :type => :submit, :class =>"btn btn-primary",:id =>"contract_category_validate_form" end%>
    <%= if !@contract_category.id.nil? then link_to '<i class="fa fa-trash fa-lg"></i>'.html_safe, @contract_category, :title => "Supprimer la catégorie de contrat", :confirm => 'Confirmer la suppression ?', :class=>"pull-right btn", :method => :delete end %>
    </div>
  </div>
