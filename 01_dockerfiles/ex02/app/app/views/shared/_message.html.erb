<% if notice %>
    <!-- Alerte 'notice' -->
	<script>
        alertify.success('<strong><i class="fa fa-check-circle fa-lg"></i>&nbsp;<%= notice %></strong>');
    </script>
<% end %>

<% if alert %>
    <!-- Alerte 'alert' -->
    <script>
        alertify.error('<strong><i class="fa fa-exclamation-circle fa-lg"></i>&nbsp;<%= alert %><strong>');
    </script>
<% end %>

